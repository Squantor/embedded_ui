    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug embedded UI mini",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/bin/embedded_ui_mini/debug/embedded_ui_mini.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "LPC824",
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "runToEntryPoint": "main",
            "preLaunchCommands": [],
            "preRestartCommands": [
                "set print pretty on",
                "file bin/embedded_ui_mini/debug/embedded_ui_mini.elf",
                "monitor swdp_scan",
                "attach 1",
                "set mem inaccessible-by-default off",
                "set {int}0x40048000 = 2",
                "load bin/embedded_ui_mini/debug/embedded_ui_mini.elf",
                "set {int}0x40048000 = 2",
                "compare-sections",
                "b main",
            ],
            "preLaunchTask": "build embedded UI mini",
            "svdFile": "${workspaceFolder}/libMcuLL/svd/nxp/LPC824.svd"
        },
    ]
}